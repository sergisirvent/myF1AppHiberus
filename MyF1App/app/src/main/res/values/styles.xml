<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Row Items List -->

        <!-- Row Item - Arrow -->

        <style name="row_item_arrow" parent="TextAppearance.AppCompat">
            <item name="android:layout_width">60dp</item>
            <item name="android:layout_height">60dp</item>
            <item name="android:src">@drawable/ic_right_arrow_foreground</item>
            <item name="android:tint">@color/main_red_color</item>
        </style>

        <!-- Row Item - Text view -->

        <style name="row_item_text_view" parent="TextAppearance.AppCompat">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:padding">@dimen/med_margin</item>
            <item name="android:textSize">20sp</item>
            <item name="android:maxLines">2</item>
            <item name="android:ellipsize">end</item>
            <item name="android:textStyle">bold</item>
        </style>

</resources>