<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/med_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/large_margin"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_drivers_list_row"
            android:layout_width="@dimen/iv_list_width"
            android:layout_height="@dimen/iv_list_width"
            tools:background="@color/main_black_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_drivers_list_row"
            style="@style/row_item_text_view"
            tools:text="Nombre de piloto"
            app:layout_constraintStart_toEndOf="@+id/iv_drivers_list_row"
            app:layout_constraintTop_toTopOf="@id/iv_drivers_list_row"
            app:layout_constraintBottom_toBottomOf="@id/iv_drivers_list_row"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_driver_row"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_arrow_driver_row"
            style="@style/row_item_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>